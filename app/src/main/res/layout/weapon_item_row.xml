<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_very_small_margin">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/weapon_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/legendary_item_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/weapon_stat_damage_type_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/activity_very_small_margin"
            />

        <TextView
            android:id="@+id/weapon_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginRight="@dimen/activity_small_margin"
            android:fontFamily="@font/haas_grotesk_55_sub_heading"
            android:text="Weapon Name"
            android:textColor="@color/white_text"
            android:textSize="@dimen/normal_text"
            app:layout_constraintLeft_toRightOf="@id/weapon_stat_damage_type_image"
            app:layout_constraintRight_toLeftOf="@id/weapon_stat_value"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/weapon_stat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/haas_grotesk_55_sub_heading"
            android:text="0"
            android:textColor="@color/white_text"
            android:textSize="@dimen/normal_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginRight="@dimen/activity_small_margin"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>